 fun circleArea(radius:Float): Float{
    return PI*radius.pow(2)
}
import kotlin.math.pow
const val PI= 3.1416f
fun main() {
     //1. Tipo de dato asignado a un numero decimal 
    
    var numDecimal = 5.24;
    println("Número en decimal: $numDecimal");
    
    
    //2. Conversión de variable decimal a flotante
    
    var floatDecimal = 5.24;
    println("El numero en flotante: $floatDecimal");
   
     
    
    
    //3. Calcular al área del círculo
 
    val radius= 5.24f
    val area = circleArea(radius)
    println("El área del círculo es: $area")
}
fun circleArea(radius:Float): Float{
    return PI*radius.pow(2)
}
